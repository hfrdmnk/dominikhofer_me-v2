{
	"name": "dominikhofer_me-v2",
	"version": "1.0.0",
	"description": "My always-in-progress home on the internet. Version 2.",
	"scripts": {
		"serve": "concurrently \"npm run tailwind\" \"npm run serve-php\" \"npm run sync\"",
		"tailwind": "npx @tailwindcss/cli -i ./assets/css/tailwind.css  -o ./assets/css/styles.css --watch",
		"serve-php": "php -S localhost:8000 kirby/router.php &> /dev/null",
		"sync": "node browsersync.js"
	},
	"devDependencies": {
		"browser-sync": "^3.0.3",
		"concurrently": "^9.1.2"
	},
	"browserSync": {
		"proxy": "localhost:8000",
		"watch": [
			"assets",
			"content",
			"site/snippets",
			"site/templates",
			"site/blueprints",
			"site/languages"
		],
		"ignore": [
			"**/.lock",
			"**/.DS_Store"
		]
	},
	"dependencies": {
		"@tailwindcss/cli": "^4.0.6",
		"tailwindcss": "^4.0.6"
	}
}
